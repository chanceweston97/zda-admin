# Medusa Backend Environment Variables
# Copy this file to .env and update with your values

# Database
DATABASE_URL=postgres://postgres:YOUR_PASSWORD@localhost:5432/medusa-store

# Redis
REDIS_URL=redis://localhost:6379

# CORS Configuration
STORE_CORS=http://localhost:8000,https://your-domain.com
ADMIN_CORS=http://localhost:5173,http://localhost:9000,https://admin.your-domain.com
AUTH_CORS=http://localhost:5173,http://localhost:9000,http://localhost:8000

# Secrets (Generate secure random strings for production)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
COOKIE_SECRET=your-super-secret-cookie-key-change-in-production

# Admin Onboarding
MEDUSA_ADMIN_ONBOARDING_TYPE=nextjs
MEDUSA_ADMIN_ONBOARDING_NEXTJS_DIRECTORY=my-medusa-store-storefront

# For production, also set:
# NODE_ENV=production
